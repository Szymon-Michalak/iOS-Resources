---
import CardsNav from './NavGrid/CardsNav.astro';

export interface Props {
	minimal?: boolean;
}

const { minimal } = Astro.props as Props;

interface Service {
	title: string;
	slug: string;
	description: string;
}

const services: Service[] = [
	{ title: 'iOS-Resources', slug: 'iOS-Resources', description: 'A curated list of resources for iOS development.' },
	{ title: 'iOS-Snippets', slug: 'iOS-Snippets', description: 'All the most used snippets for iOS development.' },
	{ title: 'iOS-Components', slug: 'iOS-Components', description: 'UI and Utility components for iOS development.' },
	{ title: 'Swift-Algorithms', slug: 'Swift-Algorithms', description: 'Common coding interview problems written in Swift.' },
];
---

<CardsNav
	minimal={minimal}
	links={services.map(({ title, slug, description }) => ({
		title: title,
		href: `https://github.com/szymon-michalak/${slug}`,
		logo: `../assets/${slug}.svg`,
        description: description,
	}))}
/>